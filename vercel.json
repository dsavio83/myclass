{
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "functions": {
        "api/index.js": {
            "maxDuration": 30,
            "memory": 512
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "env": {
        "NODE_OPTIONS": "--max-old-space-size=512"
    }
}